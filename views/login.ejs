        <li></li>
    </ul>
</div>
<script src='../javascripts/jquery-1.12.3.js'></script>
<script>
    $(function(){
        var $Form=$('#form');
        var string;
        $("input",$Form).focusin(function(){
            string=$(this).attr('placeholder');
            $(this).attr('placeholder',"");
            $(this).animate({
                opacity:1,
                left:-10,
                width:300
            });
        });
        $('input',$Form).focusout(function(){
            $(this).attr('placeholder',string);
            $(this).animate({
                opacity:0.4,
                left:0,
                width:250
            });
        });
    });
</script>
</html>